<interface>
  <!-- interface-name window.blp -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="gio" version="2.0"/>
  <requires lib="libadwaita" version="1.6"/>
  <template class="AkamaiStagingWindow" parent="AdwApplicationWindow">
    <property name="default-height">800</property>
    <property name="default-width">850</property>
    <property name="title" translatable="yes">Akamai Staging Network Spoof</property>
    <child>
      <object class="AdwToolbarView">
        <child type="top">
          <object class="AdwHeaderBar">
            <child type="end">
              <object class="GtkMenuButton">
                <property name="icon-name">open-menu-symbolic</property>
                <property name="menu-model">primary_menu</property>
                <property name="tooltip-text" translatable="yes">Main Menu</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="AdwToastOverlay" id="toast_overlay">
            <child>
              <object class="GtkScrolledWindow">
                <property name="hscrollbar-policy">never</property>
                <property name="min-content-width">400</property>
                <child>
                  <object class="AdwClamp">
                    <property name="maximum-size">800</property>
                    <child>
                      <object class="GtkBox">
                        <property name="margin-bottom">24</property>
                        <property name="margin-end">24</property>
                        <property name="margin-start">24</property>
                        <property name="margin-top">24</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">24</property>
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="description" translatable="yes">Enter a domain to resolve its Akamai staging IP and add it to your hosts file.</property>
                            <property name="title" translatable="yes">Add Host</property>
                            <child>
                              <object class="AdwEntryRow" id="entry_domain">
                                <property name="activates-default">true</property>
                                <property name="title" translatable="yes">Domain/URL</property>
                                <child type="suffix">
                                  <object class="GtkButton" id="button_add_ip">
                                    <property name="css-classes">suggested-action</property>
                                    <property name="label" translatable="yes">Add</property>
                                    <property name="tooltip-text" translatable="yes">Add to Hosts</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="title" translatable="yes">Managed Hosts</property>
                            <child type="header-suffix">
                              <object class="GtkSearchEntry" id="search_entry_hosts">
                                <property name="placeholder-text" translatable="yes">Search hosts…</property>
                                <property name="width-chars">20</property>
                              </object>
                            </child>
                            <child>
                              <object class="AdwViewSwitcher" id="hosts_view_switcher">
                                <property name="margin-bottom">10</property>
                                <property name="margin-top">20</property>
                                <property name="vexpand">true</property>
                                <child>
                                  <object class="GtkScrolledWindow" id="scrolled_window_hosts_list">
                                    <property name="min-content-height">200</property>
                                    <child>
                                      <object class="GtkColumnView" id="column_view_entries">
                                        <property name="show-column-separators">true</property>
                                        <property name="show-row-separators">true</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                                <child>
                                  <object class="AdwStatusPage" id="empty_hosts_status_page">
                                    <property name="description" translatable="yes">Add a domain to get started, or adjust your search filter.</property>
                                    <property name="icon-name">edit-find-symbolic</property>
                                    <property name="title" translatable="yes">No Host Entries</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                            <child>
                              <object class="AdwActionRow">
                                <property name="margin-bottom">20</property>
                                <property name="margin-top">20</property>
                                <property name="title" translatable="yes">Select a host entry to edit/delete.</property>
                                <child type="suffix">
                                  <object class="GtkBox">
                                    <property name="spacing">6</property>
                                    <child>
                                      <object class="GtkButton" id="button_edit_host">
                                        <property name="label" translatable="yes">Edit…</property>
                                        <property name="tooltip-text" translatable="yes">Edit Selected Entry</property>
                                      </object>
                                    </child>
                                    <child>
                                      <object class="GtkButton" id="button_delete">
                                        <property name="css-classes">destructive-action</property>
                                        <property name="label" translatable="yes">Delete</property>
                                        <property name="tooltip-text" translatable="yes">Delete Selected Entry</property>
                                      </object>
                                    </child>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                        <child>
                          <object class="AdwPreferencesGroup">
                            <property name="title" translatable="yes">Status Log</property>
                            <child>
                              <object class="GtkScrolledWindow">
                                <property name="hscrollbar-policy">never</property>
                                <property name="min-content-height">100</property>
                                <child>
                                  <object class="GtkTextView" id="textview_status">
                                    <property name="bottom-margin">6</property>
                                    <property name="cursor-visible">false</property>
                                    <property name="editable">false</property>
                                    <property name="left-margin">12</property>
                                    <property name="right-margin">12</property>
                                    <property name="top-margin">6</property>
                                    <property name="wrap-mode">word-char</property>
                                  </object>
                                </child>
                              </object>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="action">app.preferences</attribute>
        <attribute name="label" translatable="yes">_Preferences</attribute>
      </item>
      <item>
        <attribute name="action">win.show-help-overlay</attribute>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
      </item>
      <item>
        <attribute name="action">app.about</attribute>
        <attribute name="label" translatable="yes">_About…</attribute>
      </item>
    </section>
  </menu>
</interface>
